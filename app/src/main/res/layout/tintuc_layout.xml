<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:weightSum="7">

        <ImageView
            android:id="@+id/imgAnhbia"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="6dp"
            android:layout_weight="5"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="4">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="11"
                android:orientation="horizontal"
                android:layout_weight="3">
                <TextView
                    android:id="@+id/txtTieude"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="10"
                    android:text="Tiêu đề"
                    android:ellipsize="end"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imgAnhbia"
                    app:layout_constraintTop_toTopOf="parent" />
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:background="@drawable/danhmuc_background"
                    android:id="@+id/btnLuuTin"
                    android:layout_weight="1"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/imgAnhlogo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="2"
                    android:scaleType="fitStart" />

                <TextView
                    android:id="@+id/txtNgaydang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="3"
                    android:text="10 phút trước"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@+id/imgAnhbia"
                    app:layout_constraintTop_toBottomOf="@+id/txtTieude" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>